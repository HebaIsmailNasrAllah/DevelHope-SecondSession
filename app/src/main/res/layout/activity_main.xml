<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_livedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LiveData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_livedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LiveData"
        app:layout_constraintEnd_toEndOf="@+id/tv_livedata"
        app:layout_constraintStart_toStartOf="@+id/tv_livedata"
        app:layout_constraintTop_toBottomOf="@+id/tv_livedata" />

    <TextView
        android:id="@+id/txt_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Flow"
        app:layout_constraintEnd_toEndOf="@+id/btn_livedata"
        app:layout_constraintStart_toStartOf="@+id/btn_livedata"
        app:layout_constraintTop_toBottomOf="@+id/btn_livedata" />

    <Button
        android:id="@+id/btn_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Flow"
        app:layout_constraintEnd_toEndOf="@+id/txt_flow"
        app:layout_constraintStart_toStartOf="@+id/txt_flow"
        app:layout_constraintTop_toBottomOf="@+id/txt_flow" />

    <TextView
        android:id="@+id/txt_stateflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="StateFlow"
        app:layout_constraintEnd_toEndOf="@+id/btn_sharedflow"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/btn_sharedflow"
        app:layout_constraintTop_toBottomOf="@+id/btn_sharedflow" />

    <Button
        android:id="@+id/btn_stateflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="StateFlow"
        app:layout_constraintEnd_toEndOf="@+id/txt_stateflow"
        app:layout_constraintStart_toStartOf="@+id/txt_stateflow"
        app:layout_constraintTop_toBottomOf="@+id/txt_stateflow" />

    <TextView
        android:id="@+id/txt_sharedflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SharedFlow"
        app:layout_constraintEnd_toEndOf="@+id/btn_flow"
        app:layout_constraintStart_toStartOf="@+id/btn_flow"
        app:layout_constraintTop_toBottomOf="@+id/btn_flow" />

    <Button
        android:id="@+id/btn_sharedflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SharedFlow"
        app:layout_constraintEnd_toEndOf="@+id/txt_sharedflow"
        app:layout_constraintStart_toStartOf="@+id/txt_sharedflow"
        app:layout_constraintTop_toBottomOf="@+id/txt_sharedflow" />

</androidx.constraintlayout.widget.ConstraintLayout>